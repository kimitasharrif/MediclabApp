<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Screen2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp">


        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/skip1"
            android:text="Skip"
            android:fontFamily="@font/montserrat"
            android:textColor="#7C7979"
            android:textSize="20sp"
            android:textAlignment="textEnd"/>




    </LinearLayout>


    <ImageView
        android:layout_width="480dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:padding="20dp"
        android:src="@drawable/screen2" />


    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quality Services"
        android:textColor="@color/black"
        android:textAlignment="textStart"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textSize="34sp"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We provide quality services for or clients and make sure tha their data and privacy is secured."
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/montserrat"
        android:textStyle="normal"
        android:textSize="14sp"
        android:lineHeight="20dp"
        android:textColor="@color/black"/>




    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fab"
            android:layout_gravity="bottom|end"
            android:layout_margin="10dp"
            android:backgroundTint="#3F51B5"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:elevation="6dp"
            android:textSize="14sp"
            android:textColor="#ffffff"
            app:layout_anchorGravity="center"
            app:layout_anchor="@id/fab"/>




    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</LinearLayout>